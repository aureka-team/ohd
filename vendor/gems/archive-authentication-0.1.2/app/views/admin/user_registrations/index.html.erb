<h1><%= link_to 'Benutzerverwaltung', admin_user_management_url %></h1>

<h2>
  <%= t(@workflow_state.to_sym, :scope => "devise.workflow_states").capitalize %>
</h2>

<table class='userTable' cellspacing='0' cellpadding='0' border='0'>
  <tbody>
    <tr>
      <th class="userTable">Name</th>
      <th class="userTable">&nbsp;</th>
      <th class="userTable"><%= t(:requested_at, :scope => "devise.registration_fields") %></th>
      <th class="userTable">&nbsp;</th>
    </tr>
    <% @user_registrations.each do |user_registration| %>
    <tr class="userTable <%= cycle('userTableEven', 'userTableOdd') %>">
      <td class="userTableLabel userTableList"><%= "#{user_registration.first_name} #{user_registration.last_name}" %></td>
      <td class="userTable userTableList">
        <% if FileTest.exists?(File.join(RAILS_ROOT, 'app', 'views', 'users', '_highlighted_application_info.html.erb')) %>
          <%=  render :partial => '/users/highlighted_application_info', :object => user_registration %>
        <% else %>
          &nbsp;
        <% end %>
      </td>
      <td class="userTable userTableList" style="font-size:85%;"><%= user_registration.created_at.nil? ? '&mdash;' : user_registration.created_at.strftime("am %d.%m.%y %H:%M Uhr") %></td>
      <td class="userTable userTableList" style="vertical-align:middle;">
        <%= link_to 'Anfrage&nbsp;bearbeiten',
                    edit_admin_user_registration_path(user_registration.id),
                    :class => "userTableButtonLink" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>