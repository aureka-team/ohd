<h2><%= t('change', :scope => 'devise.passwords') %></h2>

<% form_for resource_name, resource, :url => password_path(resource_name), :html => { :method => :put } do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :reset_password_token %>

  <p><%= f.label t(:password, :scope => 'devise.passwords') %></p>
  <p><%= f.password_field :password %></p>

  <p><%= f.label t(:password_confirmation, :scope => 'devise.passwords') %></p>
  <p><%= f.password_field :password_confirmation %></p>

  <p><%= f.submit t(:submit, :scope => 'devise.passwords') %></p>
<% end %>

<%= render :partial => "shared/devise_links" %>