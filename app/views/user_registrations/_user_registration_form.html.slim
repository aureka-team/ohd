        option value="#{I18n.backend.translate(locale, 'genealogy')}"  = I18n.backend.translate(locale, 'genealogy')
        option value="#{I18n.backend.translate(locale, 'art')}"  = I18n.backend.translate(locale, 'art')
        option value="#{I18n.backend.translate(locale, 'personal_interest')}"  = I18n.backend.translate(locale, 'personal_interest')
        option value="#{I18n.backend.translate(locale, 'press_publishing')}"  = I18n.backend.translate(locale, 'press_publishing')
        option value="#{I18n.backend.translate(locale, 'school_project')}"  = I18n.backend.translate(locale, 'school_project')
        option value="#{I18n.backend.translate(locale, 'university_teaching')}"  = I18n.backend.translate(locale, 'university_teaching')
        option value="#{I18n.backend.translate(locale, 'scientific_paper')}"  = I18n.backend.translate(locale, 'scientific_paper')
        option value="#{I18n.backend.translate(locale, 'other')}"  = I18n.backend.translate(locale, 'other')
  .form-group
    .form-label
      label for="user_registration_comments" = I18n.backend.translate(locale, 'interest_explanation') + "*"
    .form-input
      textarea#user_registration_comments name="user_registration[comments]"
  .form-group
    .form-label
      label for="user_registration_organization" = I18n.backend.translate(locale, 'institution_home')
