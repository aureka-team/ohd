    .form-label
      label for="user_registration_job_description" = I18n.backend.translate(locale, 'profession')
    .form-input
      select#user_registration_job_description name="user_registration[job_description]"
        option value=""  Bitte auswählen
        option value="#{I18n.backend.translate(locale, 'researcher')}"  = I18n.backend.translate(locale, 'researcher')
        option value="#{I18n.backend.translate(locale, 'filmmaker')}"  = I18n.backend.translate(locale, 'filmmaker')
        option value="#{I18n.backend.translate(locale, 'journalist')}"  = I18n.backend.translate(locale, 'journalist')
        option value="#{I18n.backend.translate(locale, 'teacher')}"  = I18n.backend.translate(locale, 'teacher')
        option value="#{I18n.backend.translate(locale, 'memorial_staff')}"  = I18n.backend.translate(locale, 'memorial_staff')
        option value="#{I18n.backend.translate(locale, 'pupil')}"  = I18n.backend.translate(locale, 'pupil')
        option value="#{I18n.backend.translate(locale, 'student')}"  = I18n.backend.translate(locale, 'student')
        option value="#{I18n.backend.translate(locale, 'other')}"  = I18n.backend.translate(locale, 'other')
  .form-group
    .form-label
      label for="user_registration_research_intentions"  = I18n.backend.translate(locale, 'reason') + "*"
    .form-input
      select#user_registration_research_intentions name="user_registration[research_intentions]"
        option value=""  Bitte auswählen
        option value="#{I18n.backend.translate(locale, 'exhibition')}"  = I18n.backend.translate(locale, 'exhibition')
        option value="#{I18n.backend.translate(locale, 'education')}"  = I18n.backend.translate(locale, 'education')
