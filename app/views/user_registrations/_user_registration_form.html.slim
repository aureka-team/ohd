    .form-input
      input#user_registration_homepage name="user_registration[homepage]" type="text"
  .form-group
    .form-label
      label for="user_registration_street" = I18n.backend.translate(locale, 'street') + "*"
    .form-input
      input#user_registration_street name="user_registration[street]" type="text"
  .form-group
    .form-label
      label for="user_registration_zipcode"  = I18n.backend.translate(locale, 'zip') + "*"
    .form-input
      input#user_registration_zipcode name="user_registration[zipcode]" type="text"
  .form-group
    .form-label
      label for="user_registration_city" = I18n.backend.translate(locale, 'place') + "*"
    .form-input
      input#user_registration_city name="user_registration[city]" type="text"
  .form-group
    .form-label
      label for="user_registration_country"  = I18n.backend.translate(locale, 'country') + "*"
    .form-input
      select#user_registration_country name="user_registration[country]"
        option value=""  Bitte auswählen
        option value="DE"  Deutschland
        option value="AT"  Österreich
        option value="CH"  Schweiz
        option value="PL"  Polen
        option value="RU"  Russische Föderation
        option value="CZ"  Tschechische Republik
        option value="US"  USA
