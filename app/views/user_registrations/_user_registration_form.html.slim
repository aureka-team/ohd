      select#user_registration_appellation name="user_registration[appellation]"
        option value=""  Bitte auswählen
        option value="#{I18n.backend.translate(locale, 'ms')}"  = I18n.backend.translate(locale, 'ms')
        option value="#{I18n.backend.translate(locale, 'ms_dr')}"  = I18n.backend.translate(locale, 'ms_dr')
        option value="#{I18n.backend.translate(locale, 'ms_prof')}"  = I18n.backend.translate(locale, 'ms_prof')
        option value="#{I18n.backend.translate(locale, 'mr')}"  = I18n.backend.translate(locale, 'mr')
        option value="#{I18n.backend.translate(locale, 'mr_dr')}"  = I18n.backend.translate(locale, 'mr_dr')
        option value="#{I18n.backend.translate(locale, 'mr')}"  = I18n.backend.translate(locale, 'mr_prof')
  .form-group
    .form-label
      label for="user_registration_first_name" = I18n.backend.translate(locale, 'first_name') + "*"
    .form-input
      input#user_registration_first_name name="user_registration[first_name]" type="text"
  .form-group
    .form-label
      label for="user_registration_last_name" = I18n.backend.translate(locale, 'last_name') + "*"
    .form-input
      input#user_registration_last_name name="user_registration[last_name]" type="text"
  .form-group
    .form-label
      label for="user_registration_email" = I18n.backend.translate(locale, 'email') + "*"
    .form-input
      input#user_registration_email name="user_registration[email]" type="text"
