  .form-group
    .form-label
      label for="user_registration_receive_newsletter"  Newsletter
    .form-input
      input name="user_registration[receive_newsletter]" type="hidden" value="0"
      input#user_registration_receive_newsletter name="user_registration[receive_newsletter]" type="checkbox" value="1"
      p.help-block Ich möchte den Newsletter des Projektes "Erinnerungen an die Okkupation Griechenlands." abonnieren.
  .form-group
    .form-label
      label for="user_registration_tos_agreement"  = I18n.backend.translate(locale, 'conditions') + "*"
    .form-input
      input name="user_registration[tos_agreement]" type="hidden" value="0"
      input#user_registration_tos_agreement name="user_registration[tos_agreement]" type="checkbox" value="1"
      p.help-block
        a href="" target="_blank" title=("Externer Link") = I18n.backend.translate(locale, 'conditions_accept')
  .form-group
    .form-label
      label for="user_registration_priv_agreement" = I18n.backend.translate(locale, 'notes_on_privacy') + "*"
    .form-input
      input name="user_registration[priv_agreement]" type="hidden" value="0"
      input#user_registration_priv_agreement name="user_registration[priv_agreement]" type="checkbox" value="1"
      p.help-block
        a href="" target="_blank" title=("Externer Link") = I18n.backend.translate(locale, 'notes_on_privacy_accept')
  .form-group
    input data-disable-with=("Registrierung senden") name="commit" type="submit" value=("#{I18n.backend.translate(locale, 'send_registration')}")
    input#user_registration_default_locale name="user_registration[default_locale]" type="hidden" value="de"



