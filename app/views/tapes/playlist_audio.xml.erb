<%# This is the playlist for the player preview -%>
<?xml version="1.0" encoding="utf-8"?>
<playlist version="1" xmlns="http://xspf.org/ns/0/">
  <tracklist>
    <% unless @tapes == nil -%>
      <% @tapes.each do |tape| -%>
        <track>
          <location><%= tape.media_id + ".mp3" %></location>
          <meta rel="captions"><%= transcript_interview_tape_path(:id => tape.id, :format => :xml) %></meta>
          <meta rel="start">10</meta>
          <meta rel="streamer">rtmp://stream03.cedis.fu-berlin.de/abcbe6deaec582258749fcd36da488ca</meta>
          <image><%= tape.interview.still_image.url(:original) -%></image>
        </track>
      <% end -%>
    <% end -%>
  </tracklist>
</playlist>