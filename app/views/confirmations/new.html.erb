<h1><%= t(:resend, :scope => 'devise.confirmations') %></h1>

<% form_for resource_name, resource, :url => confirmation_path(resource_name) do |f| %>
  <%= f.error_messages %>

  <span><%= f.label t(:email, :scope => 'devise.authentication_keys') %></span>
  <span><%= f.text_field :email %></span>

  <span><%= f.submit t(:send_now, :scope => 'devise.labels') %></span>

  <%= render :partial => "shared/devise_links" %>

<% end %>