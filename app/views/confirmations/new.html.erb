<h2><%= t(:resend, :scope => 'devise.confirmations') %></h2>

<% form_for resource_name, resource, :url => confirmation_path(resource_name) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label t(:email, :scope => 'devise.authentication_keys') %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.submit t(:send_now, :scope => 'devise.labels') %></p>
<% end %>

<%= render :partial => "shared/devise_links" %>