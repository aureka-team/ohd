<div id="containerSegments" style="height: 300px; overflow-y: scroll; overflow-x: hidden; display: none;">
  <% matching_segments = @search.matching_segments_for(@interview.archive_id) %>
  <% if matching_segments.empty? %>
  <ul>
    <% matching_segments.each do |segment| %>
      <li id="<%= segment.media_id %>">
        <a href="#">
          <span class="timecode">[<%= Tape.human_name.sub(/^([^AEIOU]{1})(\w+)([^aeiou]{1})[aeiou]*$/, '\1\3') + ".#{segment.tape.number}" %>] <%= segment.timecode %></span>
          <%= segment.translation %>
        </a>
      </li>
    <% end %>
  </ul>
