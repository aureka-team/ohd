<div id="containerInterview" class="active container">

  <ul class="data">
    <li>
      <span class="label">Art und L&auml;nge des Interviews</span>
      <span class="value"><%= interview.video ? 'Videointerview' : 'Audiointerview' %>&nbsp;<%= interview.duration.minimal %></span>
    </li>
    <li>
      <span class="label">gef&uuml;hrt am</span>
      <span class="value"><%= (Time.now - 6.years).strftime('%d.%m.%Y') %></span>
    </li>
    <li>
      <span class="label"><%= Interview.human_attribute_name('interviewers') %></span>
      <span class="value"><%= interview.interviewers || 'keine Angabe' %></span>
    </li>
    <li>
      <span class="label"><%= Interview.human_attribute_name('transcriptors') %></span>
      <span class="value"><%= interview.transcriptors || 'keine Angabe' %></span>
    </li>
    <li>
      <span class="label"><%= Interview.human_attribute_name('language') %></span>
      <span class="value"><%= interview.language %>
        <% unless interview.language.downcase == "deutsch" %>
        ,&nbsp;<%= interview.translated ? t(:translated, :scope => 'status') : t(:not_translated, :scope => 'status') %>
        <% end %>
      </span>
    </li>
    <% %w( translators researchers proofreaders segmentators ).each do |attr| %>
      <% value = interview.send(attr) %>
      <% unless value.blank? %>
    <li>
      <span class="label"><%= Interview.human_attribute_name(attr) %></span>
      <span class="value"><%= value || 'keine Angabe' %></span>
    </li>
      <% end %>
    <% end %>
    <li>
      <span class="label">Teilsammlung<%#= Collection.human_name %></span>
      <span class="value"><%= interview.collection %></span>
    </li>
    <li>
      <span class="label"><%= Interview.human_attribute_name(:archive_id) %></span>
      <span class="value"><%= interview.archive_id %></span>
    </li>
  </ul>

    <ul id="interviewDocuments">
      <li><a href="za004_bg.pdf" target="_blank">Biographie zu <%= @interview.short_title %> (pdf)</a></li>
      <li><a href="za004_tr.pdf" target="_blank">Transkript zu <%= @interview.short_title %> (pdf)</a></li>
