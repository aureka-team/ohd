<div id="containerInterview" class="active container">

  <ul class="data">
    <li>
      <span class="label"><%= Interview.human_attribute_name('duration') %></span>
      <span class="value"><%= interview.video %>&nbsp;<%= interview.duration.minimal %></span>
    </li>
    <li>
      <span class="label"><%= Interview.human_attribute_name('interview_date') %></span>
      <span class="value"><%= (Time.now - 6.years).strftime('%d.%m.%Y') || t(:not_specified, :scope => 'status') %></span>
    </li>
    <li>
      <span class="label"><%= Interview.human_attribute_name('interviewers') %></span>
      <span class="value"><%= interview.interviewers.blank? ? t(:not_specified, :scope => 'status') : interview.interviewers %></span>
    </li>
    <li>
      <span class="label"><%= Interview.human_attribute_name('transcriptors') %></span>
      <span class="value"><%= interview.transcriptors.blank? ? t(:not_specified, :scope => 'status') : interview.transcriptors %></span>
    </li>
    <li>
      <span class="label"><%= Interview.human_attribute_name('language') %></span>
      <span class="value"><%= interview.languages.map{|f| t(f, :scope => 'categories.languages')}.join(' / ') -%>
        <% unless interview.language.downcase == "deutsch" -%>,
        <%= interview.translated ? t(:translated, :scope => 'status') : t(:not_translated, :scope => 'status') %>
        <% end -%>
      </span>
    </li>
    <% %w( translators researchers proofreaders segmentators ).each do |attr| %>
      <% value = interview.send(attr) %>
      <% unless value.blank? %>
    <li>
      <span class="label"><%= Interview.human_attribute_name(attr) %></span>
      <span class="value"><%= value || t(:not_specified, :scope => 'status') %></span>
    </li>
      <% end %>
    <% end %>
    <li>
      <span class="label"><%= Interview.human_attribute_name('collection') %></span>
      <span class="value"><%= t(interview.collection, :scope => 'collections.name') %></span>
    </li>
    <li>
      <span class="label"><%= Interview.human_attribute_name(:archive_id) %></span>
      <span class="value"><%= interview.archive_id %></span>
    </li>
  </ul>

    <ul id="interviewDocuments">
      <% interview.text_materials.each do |text_material| %>
        <li>
          <% link_text = "#{t(text_material.document_type, :scope => 'user_interface.labels')}" %>
          <% link_text << " #{interview.full_title[/^[^,]+,\s+\w/]}." if text_material.document_type == "Biography" %>
          <% link_text << " (pdf)" %>
          <%= link_to link_text, text_material.document.url %>
        </li>
      <% end %>
    </ul>

</div>