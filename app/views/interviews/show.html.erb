<%# cache [ I18n.locale.to_s, @interview.to_param, 'show'].join('/') do -%>
<div class="intervieweeTitle">
  <h1><%= @interview.full_title(I18n.locale) %></h1>
  <p>
    <%= @interview.gender ? t(:male, :scope => 'personal_data') : t(:female, :scope => 'personal_data') %>,
    <%= t(:born, :scope => 'personal_data') %>
    <%= @interview.year_of_birth %>
  </p>
  <%= render :partial => 'user_contents/save', :object => InterviewReference.for_interview(@interview) %>
</div>

<div id="fragmentOverview">
  <div id="tabsOverview">

    <ul>
      <li id="tabInterview" class="active">
        <p onclick="showInterviewTab('tabInterview');"><%= t(:interview, :scope => 'user_interface.labels') %></p>
      </li>
      <li id="tabHistoricalContext">
        <p onclick="showInterviewTab('tabHistoricalContext');">
            <%= t((@interview.respond_to?(:forced_labor_groups) ? :forced_labor_data : :interview_data), :scope => 'user_interface.labels') %>
        </p>
      </li>

      <% javascript_tag do %>

        var interviewTabs = $$('#tabsOverview ul li');

        function showInterviewTab(id) {
          interviewTabs.each(function(tab) {
            var container = $(tab.id.sub('tab','container'));
            if(tab.id == id) {
              tab.addClassName('active');
              container.addClassName('active');
            } else {
              tab.removeClassName('active');
              container.removeClassName('active');
            }
          });
        };

      <% end %>
    </ul>

  </div>

  <br class="clear" />

  <%= render :partial => "interview", :object => @interview %>

  <%#= render :partial => "historical_context", :object => @interview %>

</div>

<%#= render :partial => "mediaplayer" %>

<div class="compact clear">&nbsp;</div>

<%#= render :partial => "gallery" %>
<%# end %><%# cache %>
