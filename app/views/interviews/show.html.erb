<%= render :partial => "mediaplayer" %>

<div id="fragmentOverview">
  <h1><%= @interview.full_title %></h1>
  <table class="archivTableBiography">
    <tr>
      <td align="left" valign="top">
        <%= @interview.gender ? 'männlich' : 'weiblich' %>, geb. <%= @interview.date_of_birth %> in <%= @interview.country_of_origin %>
      </td>
    </tr>
  </table>

  <div id="tabsOverview">

    <ul>
      <li id="tabBiography" class="active">
        <p onclick="showInterviewTab('tabBiography');">Biografie</p>
      </li>
      <li id="tabHeadings"<%= @interview.has_headings ? "" : " style=\"display: none;\"" %>>
        <p onclick="showInterviewTab('tabHeadings');">Überschriften</p>
      </li>
      <%# if @search.results.include?(@interview) && !@interview.matching_segments.empty? %>
      <li id="tabSegments"<%#= !@interview.matching_segments.empty? ? "" : " style=\"display: none;\"" %>>
        <p onclick="showInterviewTab('tabSegments');">Ausschnitte</p>
      </li>
      <%# end %>
      <% javascript_tag do %>

        var interviewTabs = $$('#tabsOverview ul li');

        function showInterviewTab(id) {
          interviewTabs.each(function(tab) {
            var container = $(tab.id.sub('tab','container'));
            if(tab.id == id) {
              tab.addClassName('active');
              container.show();
            } else {
              tab.removeClassName('active');
              container.hide();
            }
          });
        };

      <% end %>
    </ul>

  </div>

  <br class="clear" />

  <%= render :partial => "biography" %>

  <%= render :partial => "headings" %>

  <%= render :partial => "segments" %>

</div>

<div class="clear">&nbsp;</div>

<div class="contentGallery" style="clear: none; width: 260px; height: 99px; margin: 0 0 0 25px;">

  <%= render :partial => "gallery" %>

</div>

<div class="clear">&nbsp;</div>

<div class="fragmentTitle" onclick="Element.toggle('fragment1');Element.toggle('pfeilUnten1');Element.toggle('pfeilRechts1')">
  <h2><%= image_tag("pfeil_rot_rechts.gif", :id => "pfeilRechts1", :title => "", :alt => "Pfeil rechts") %><%= image_tag("pfeil_rot_unten.gif", :id => "pfeilUnten1", :title => "", :alt => "Pfeil unten", :style => "display: none;") %>weitere Informationen zum Interview</h2>
</div>

<div id="fragment1" style="display:none">
  <%= render :partial => "additional_metadata" %>
</div>
