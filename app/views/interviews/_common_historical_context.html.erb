<% if common_historical_context.birth_locations.empty? -%>
    <li>
        <span class="label"><%= Interview.human_attribute_name(:birth_date) %></span>
        <span class="value"><%= format_date common_historical_context.date_of_birth.html_safe %></span>
    </li>
<% else -%>
    <li>
        <span class="label"><%= Project.category_name(:birth_locations, I18n.locale) %></span>
        <span class="value"><%= common_historical_context.birth_location_names(I18n.locale) %>,&nbsp;<%= format_date common_historical_context.date_of_birth%></span>
    </li>
<% end -%>
