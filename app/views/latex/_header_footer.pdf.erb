\fancyhead{}
\fancyfoot{}
\fancyhead[L]{
<%
  logo = false
  logo_record = current_project.logos.where(locale: @locale).first

  if logo_record.present?
    logo_tmp_path = File.join(Rails.root, 'tmp', 'files', "#{logo_record.file.blob.filename}")
    logo_blob_path = ActiveStorage::Blob.service.send(:path_for, logo_record.file.key)
    logo = File.file?(logo_blob_path) && File.file?(logo_tmp_path)
  end
%>
  <% if logo %>
    \includegraphics[height=12mm]{<%= "#{logo_tmp_path}" %>}
    \vspace*{0.2cm}
    \newline
  <% end %>
  \fontsize{9}{11}
  \selectfont{\textcolor{primaryColor} {<%= header_text %> }}
  \vspace*{0.1cm}
}

<%
  interviewee_name = @interview && @interview.interviewees.first.name(false)[@locale.to_sym]
  footer_text = ""
  footer_text += "#{I18n.t("#{@doc_type}_footer", locale: @locale)} #{interviewee_name}" if @interview
  footer_text += ", #{I18n.t('interview', locale: @locale)} #{@interview.archive_id}, #{@interview.interview_date && Date.parse(@interview.interview_date).strftime("%d.%m.%Y") rescue @interview.interview_date}" if @interview
  footer_text += ", #{I18n.t('interview_archive', locale: @locale)} \"#{current_project.name(@locale)}\""
  footer_text += ", #{current_project.archive_domain}/#{@locale}"
%>

<% if @interview && @interview.doi_status == 'created'
     footer_text += ", DOI: https://doi.org/#{Rails.configuration.datacite['client_id']}/#{current_project.shortname}.#{@interview.archive_id}, (#{I18n.t('called', locale: @locale)}: #{Date.today.strftime("%d.%m.%Y")})."
   else
     footer_text += "."
   end
%>

\fancyfoot[L]{
  \fontsize{9}{11}
  \selectfont{
    \textcolor{primaryColor} {
      \begin{minipage}[t]{0.9\textwidth}
        \raggedright
        <%= latex_escape(footer_text) %>\\
        \vspace*{0.5cm}
        \copyright <%= Date.today.strftime("%Y") %> Freie Universit\"at Berlin
      \end{minipage}
    }
  }
}

\fancyfoot[R]{
  \thepage
}
