\fancyhead{}
\fancyfoot{}
\fancyhead[L]{
<% 
  logo = File.join(Rails.root, 'tmp', 'files', "#{current_project.logos.where(locale: @locale).first.file.blob.filename}")
  unless File.file?(logo)
    File.symlink(ActiveStorage::Blob.service.send(:path_for, current_project.logos.where(locale: @locale).first.file.key), logo)
  end
%>
  \includegraphics[height=12mm]{<%= "#{logo}" %>}
  \vspace*{0.2cm}
  \newline{\fontsize{9}{11}\selectfont{\textcolor{primaryColor} {<%= header_text %> }}}
  \vspace*{0.1cm}
}

<%
  interviewee_name = @interview && @interview.interviewees.first.name(false)[@locale.to_sym]
  footer_text = ""
  footer_text += "#{I18n.t(@biography ? 'biographical_entries_footer' : 'transcript_footer', locale: @locale)} #{interviewee_name}" if @interview
  footer_text += ", #{I18n.t('interview', locale: @locale)} #{@interview.archive_id}, #{@interview.interview_date && Date.parse(@interview.interview_date).strftime("%d.%m.%Y") rescue @interview.interview_date}" if @interview
  footer_text += ", #{I18n.t('interview_archive', locale: @locale)} \"#{current_project.name(@locale)}\""
  footer_text += ", #{current_project.archive_domain}/#{@locale}"
%>

<% if @interview && @interview.doi_status == 'created'
     footer_text += ", DOI: https://doi.org/#{Rails.configuration.datacite['client_id']}/#{current_project.initials}.#{@interview.archive_id}, (#{I18n.t('called', locale: @locale)}: #{Date.today.strftime("%d.%m.%Y")})."
   else
     footer_text += "."
   end
%>

\fancyfoot[L]{
  \fontsize{9}{11}
  \selectfont{
    \textcolor{primaryColor} {
      <%= latex_escape(footer_text) %>\\
      \vspace*{0.5cm}
      \copyright 2020 Freie Universit\"at Berlin
    }
  }
}

\fancyfoot[R]{ \thepage }
