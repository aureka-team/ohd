\fancyhead{}
\fancyfoot{}
\fancyhead[L]{
  \includegraphics[height=12mm]{<%= "#{Project.project_shortname}-Archiv-PDF-Logo-#{@locale}.png" %>}
  \vspace*{0.2cm}
  \newline{\fontsize{8}{10}\selectfont{\textcolor{primaryColor} {<%= header_text %> }}}
  \vspace*{0.1cm}
}

<%
  interviewee_name = @interview && @interview.interviewees.last.name(true)[@locale.to_sym]
  footer_text = ""
  footer_text += "#{I18n.t(@biography ? 'biographical_entries_from' : 'interview_with', locale: @locale)} #{interviewee_name}" if @interview
  footer_text += ", Interview #{@interview.archive_id}, Interviewdatum #{@interview.interview_date && Date.parse(@interview.interview_date).strftime("%d.%m.%Y") rescue @interview.interview_date}" if @interview
  footer_text += ", Interview-Archiv \"#{current_project.name(@locale)}\""
  footer_text += ", #{Project.archive_domain}"
  footer_text += ", doi: https://doi.org/#{Rails.configuration.datacite['client_id']}/#{Project.project_initials}.#{@interview.archive_id}" if @interview && @interview.doi_status == 'created'
  footer_text += "."
%>

\fancyfoot[L]{\fontsize{8}{10}\selectfont{<%= latex_escape(footer_text) %>}}
