\title{<%= @interview.full_title(I18n.locale) %>}
\begin{document}
\maketitle

<% @interview.segments.select{|i| i.tape.number == 1}.each do |segment|  %>
    <% unless segment.mainheading('deu').blank? %>
    \section{ <%= latex_escape( segment.mainheading('deu') ) %>}
    <% end %>
    <% unless segment.subheading('deu').blank? %>
    \subsection{ <%= latex_escape(segment.subheading('deu')) %>}
    <% end %>
    <%= latex_escape(sanitize(segment.send(:translation)).gsub(/<br>/, '').gsub("\"",'') + "\n") %>
<% end %>



