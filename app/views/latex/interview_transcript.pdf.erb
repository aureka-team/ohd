<% 
  interviewee_name = @interview.interviewees.first.name[@locale]
  title = "#{I18n.t((@orig_lang == @lang) ? 'transcript_header' : 'translation_header', locale: @locale)} #{interviewee_name}"
  header_text = "#{I18n.t('transcript', locale: @locale)}:  #{I18n.t('interview_with', locale: @locale)} #{interviewee_name} (#{I18n.t('archive_id', locale: @locale)} #{@interview.archive_id})"
  tape = 0
  speaker_id = nil
 %>

\title{<%= title %>}

\begin{document}

<%= render partial: "./latex/header_footer",
           locals: {
               header_text: header_text
           } %>

<%= render partial: "./latex/title",
           locals: {
               title: title,
               space_above: 3,
               space_below: 3,
               font_size: 18

           } %>
<%= render partial: "./latex/info" %>
<%= render partial: "./latex/citation",
           locals: {
               interviewee_name: interviewee_name
           } %>

\newpage

<%= render partial: "./latex/observation" if @interview.observations(@locale) %>

<%# set title of  tableofcontents: %>
\renewcommand{\contentsname}{<%= I18n.t('table_of_contents', locale: @locale) %>}
\tableofcontents

\newpage

<%= render partial: "./latex/legend" %>

\newpage

<%= render partial: "./latex/title",
           locals: {
               title: title,
               space_above: 0,
               space_below: 0.01,
               font_size: 13
           } %>

<% @interview.tapes.each do |tape| %>
  <% tape.segments.order([:tape_number, :timecode]).includes(:translations).each do |segment| %>

    <% space_above = 0.4 %>

    <% if !segment.mainheading.blank? %>
      \section{<%= latex_escape(segment.mainheading(@lang)) %>}
      <% if tape != segment.tape.number %> 
        <% space_above = 0 %>
        <%= render partial: "./latex/title", locals: {title: "#{I18n.t('tape', locale: @locale)} #{segment.tape.number}", space_above: 0.7, space_below: 0.05, font_size: 10} %>
      <% end %>
      <%= render partial: "./latex/title", locals: {title: Time.parse(segment.timecode).strftime("%H:%M:%S"), space_above: space_above, space_below: 0, font_size: 10} %>
    <% end %>

    <% if !segment.subheading.blank? %>
      \subsection{<%= latex_escape(segment.subheading(@lang)) %>}
      <%= render partial: "./latex/title", locals: {title: Time.parse(segment.timecode).strftime("%H:%M:%S"), space_above: 0.4, space_below: 0, font_size: 10} %>
    <% end %>

    <% if segment.speaker_id != speaker_id && segment.speaking_person %>
      \vspace*{<%= 0.2 %>cm}
      \textit{<%= segment.speaking_person.name[@locale] + ': ' %>}
    <% end %>
    <%= latex_escape(segment.text(@lang)) %>

    <% tape = segment.tape.number %>
    <% speaker_id = segment.speaker_id %>
  <% end %>
<% end %>

