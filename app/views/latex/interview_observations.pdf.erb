<%
  interviewee_name = "#{@interview.interviewees.first.first_name(@locale)} #{@interview.interviewees.first.last_name(@locale)}"
  title = "#{I18n.t('observations_title', interviewee_name: interviewee_name, archive_id: @interview.archive_id, locale: @locale)}"
  header_text = "#{I18n.t('observations_header', interviewee_name: interviewee_name, archive_id: @interview.archive_id, locale: @locale)}"
%>

\title{<%= title %>}

\begin{document}

<%= render partial: "./latex/header_footer",
           locals: {
               header_text: header_text
           } %>
<%= render partial: "./latex/title",
           locals:
               {
                   title: title,
                   space_above: 0.4,
                   space_below: 0.4,
                   font_size: 14,
               } %>

<%= @interview.observations_for_latex(@lang) %>
