<% unless @interview.place_of_interview.nil? %>
  \par{<%= latex_escape( "#{I18n.t('place_of_interview', locale: @locale)}: #{@interview.place_of_interview.localized_hash(:descriptor)[@locale]}" ) %>}
<% end %>
\par{<%= latex_escape( "#{I18n.t('date', locale: @locale)}: #{Date.parse(@interview.interview_date).strftime("%d.%m.%Y") rescue @interview.interview_date}" ) %>}
\par{<%= latex_escape( "#{I18n.t('language', locale: @locale)}: #{@interview.language.to_s(@locale)} #{(@interview.translated) ? I18n.t('status.translated', locale: @locale) : ''}" ) %>}
\par{<%= latex_escape( "#{I18n.t('duration', locale: @locale)}: #{Time.at(@interview.duration).utc.strftime("%H:%M:%S")}" ) %>}

<% if (@interview.tapes.count > 1) %>
  \par{<%= latex_escape( "#{I18n.t('tapes', locale: @locale)}: #{@interview.tapes.count}") %>}
<% end %>


<% unless @interview.interviewers.blank? %>
  <% first_name = "#{@interview.interviewers.first.first_name(@locale)}" %>
  <% last_name = "#{@interview.interviewers.first.last_name(@locale)}" %>
  <% name = "#{first_name} #{last_name}" %>

\par{<%= latex_escape( "#{I18n.t('interview', locale: @locale)}: #{name}" ) %>}
<% end %>
<% unless @interview.cinematographers.blank? %>
<% first_name = "#{@interview.cinematographers.first.first_name(@locale)}" %>
<% last_name = "#{@interview.cinematographers.first.last_name(@locale)}" %>
<% name = "#{first_name} #{last_name}" %>

\par{<%= latex_escape( "#{I18n.t('camera', locale: @locale)}: #{name}" ) %>}
<% end %>
<% unless @interview.transcriptors.blank? %>
<% first_name = "#{@interview.transcriptors.first.first_name(@locale)}" %>
<% last_name = "#{@interview.transcriptors.first.last_name(@locale)}" %>
<% name = "#{first_name} #{last_name}" %>

\par{<%= latex_escape( "#{I18n.t('transcript', locale: @locale)}: #{name}" ) %>}
<% end %>
<% unless @interview.translators.blank? %>
<% first_name = "#{@interview.translators.first.first_name(@locale)}" %>
<% last_name = "#{@interview.translators.first.last_name(@locale)}" %>
<% name = "#{first_name} #{last_name}" %>

\par{<%= latex_escape( "#{I18n.t('translation', locale: @locale)}: #{name}" ) %>}
<% end %>
<% unless @interview.segmentators.blank? %>
<% names = @interview.segmentators.map{|i| "#{i.first_name(@locale)} #{i.last_name(@locale)}" }.join(", ") %>

\par{<%= latex_escape( "#{I18n.t('segmentation', locale: @locale)}: #{names}" ) %> \newline}
<% end %>




