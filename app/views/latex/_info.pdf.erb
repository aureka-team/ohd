<% unless @interview.place_of_interview.nil? %>
  \par{<%= latex_escape( "#{I18n.t('place_of_interview', locale: @alpha2_locale)}: #{@interview.place_of_interview.localized_hash[@alpha2_locale]}" ) %>}
<% end %>
\par{<%= latex_escape( "#{I18n.t('date', locale: @alpha2_locale)}: #{@interview.created_at.strftime("%d.%m.%Y")}" ) %>}
\par{<%= latex_escape( "#{I18n.t('language', locale: @alpha2_locale)}: #{I18n.t('language_' + @interview.languages.join, locale: @alpha2_locale)}" ) %>}
\par{<%= latex_escape( "#{I18n.t('duration', locale: @alpha2_locale)}: #{Time.at(@interview.duration).utc.strftime("%H:%M:%S")}" ) %>}

<% if (@interview.tapes.count > 1) %>
  \par{<%= latex_escape( "#{I18n.t('tapes', locale: @alpha2_locale)}: #{@interview.tapes.count}") %>}
<% end %>


<% unless @interview.interviewers.blank? %>
  <% first_name = "#{@interview.interviewers.first.translations.where(locale: @project_locale).first.first_name}" %>
  <% last_name = "#{@interview.interviewers.first.translations.where(locale: @project_locale).first.last_name}" %>
  <% name = "#{first_name} #{last_name}" %>

\par{<%= latex_escape( "#{I18n.t('interview', locale: @alpha2_locale)}: #{name}" ) %>}
<% end %>
<% unless @interview.cinematographers.blank? %>
<% first_name = "#{@interview.cinematographers.first.translations.where(locale: @project_locale).first.first_name}" %>
<% last_name = "#{@interview.cinematographers.first.translations.where(locale: @project_locale).first.last_name}" %>
<% name = "#{first_name} #{last_name}" %>

\par{<%= latex_escape( "#{I18n.t('camera', locale: @alpha2_locale)}: #{name}" ) %>}
<% end %>
<% unless @interview.transcriptors.blank? %>
<% first_name = "#{@interview.transcriptors.first.translations.where(locale: @project_locale).first.first_name}" %>
<% last_name = "#{@interview.transcriptors.first.translations.where(locale: @project_locale).first.last_name}" %>
<% name = "#{first_name} #{last_name}" %>

\par{<%= latex_escape( "#{I18n.t('transcript', locale: @alpha2_locale)}: #{name}" ) %>}
<% end %>
<% unless @interview.translators.blank? %>
<% first_name = "#{@interview.translators.first.translations.where(locale: @project_locale).first.first_name}" %>
<% last_name = "#{@interview.translators.first.translations.where(locale: @project_locale).first.last_name}" %>
<% name = "#{first_name} #{last_name}" %>

\par{<%= latex_escape( "#{I18n.t('translation', locale: @alpha2_locale)}: #{name}" ) %>}
<% end %>
<% unless @interview.segmentators.blank? %>
<% names = @interview.segmentators.map{|i| "#{i.translations.where(locale: @project_locale).first.first_name} #{i.translations.where(locale: @project_locale).first.last_name}" }.join(", ") %>

\par{<%= latex_escape( "#{I18n.t('segmentation', locale: @alpha2_locale)}: #{names}" ) %> \newline}
<% end %>




