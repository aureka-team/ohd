<% unless @interview.place_of_interview.nil? %>
  \par{<%= latex_escape( "#{I18n.t('place_of_interview', locale: @locale)}: #{@interview.place_of_interview.descriptor(@locale)}" ) %>}
<% end %>
\par{<%= latex_escape( "#{I18n.t('date', locale: @locale)}: #{Date.parse(@interview.interview_date).strftime("%d.%m.%Y") rescue @interview.interview_date}" ) %>}
\par{<%= latex_escape( "#{I18n.t('language', locale: @locale)}: #{@interview.language.to_s(@locale)} #{(@interview.translated) ? I18n.t('status.translated', locale: @locale) : ''}" ) %>}
<% unless @interview.duration.nil? %>
  \par{<%= latex_escape( "#{I18n.t('duration', locale: @locale)}: #{Time.at(@interview.duration).utc.strftime("%H:%M:%S")}" ) %>}
<% end %>

<% if (@interview.tapes.count > 1) %>
  \par{<%= latex_escape( "#{I18n.t('tapes', locale: @locale)}: #{@interview.tapes.count}") %>}
<% end %>

<%
  {
    interviewers: 'interview',
    cinematographers: 'camera',
    transcriptors: 'transcript',
    translators: 'translation',
    segmentators: 'segmentation'
  }.each do |contribution_type, translation_key|
    contributors = @interview.send(contribution_type).compact
    names = contributors.map{|i| "#{i.first_name(@locale)} #{i.last_name(@locale)}" }.join(", ")
    unless names.blank?
%>
      \par{<%= latex_escape( "#{I18n.t(translation_key, locale: @locale)}: #{names}" ) %> \newline}
<%
    end
  end
%>

